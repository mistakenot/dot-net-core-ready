<div class="row">
    <div class="hidden-xs col-sm-5 col-md-7 col-lg-9">
        
    </div>
    <div class="col-xs-24 col-sm-14 col-md-10 col-lg-6">
        <form data-bind="submit: submitSearch"
              class="theme-on-color color-fill-accent-vivid-high p-xxs">
            <div class="form-group">
                <label for="searchTerm">
                    <span class="glyph glyph-magnifier"></span>
                    <span class="hidden-xs">Search for Package</span>
                </label>
                <input type="text"
                       class="form-control"
                       id="searchTerm"
                       placeholder="Search..."
                       autocomplete="off"
                       data-bind="value: searchTerm">
            </div>
        </form>
        <div class="text-center" data-bind="visible: showEmailAlertLink">
            <a data-toggle="modal" data-target="#email-alert-modal" href="#">
                <span class="glyph glyph-mail"></span>
                <span class="type-c2">Create an email alert for this package.</span>
            </a>
        </div>
    </div>
    <div class="hidden-xs col-sm-5 col-md-7 col-lg-9">
        <br/>
        <loading-spinner params="show: showSearch"></loading-spinner>
    </div>
</div>

<div class="row">
    <div class="visible-xs col-xs-24 col-xs-offset-5">
        <div data-bind="visible: showSearch"
             class="progress-bar"
             style="background-color: white; height: 0px;">
            <div class="progress-circle"></div>
            <div class="progress-circle"></div>
            <div class="progress-circle"></div>
            <div class="progress-circle"></div>
            <div class="progress-circle"></div>
        </div>
    </div>
</div>

